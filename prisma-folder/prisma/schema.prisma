generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id      String    @id @default(uuid())
  name    String    @unique
  admins  Admin[]
  users   User[]
  meals   Meals[]
  
  @@map("companies")
}

model Admin {
  id        String   @id @default(uuid())
  username     String   @unique
  password     String   @unique
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String

  @@map("admins")
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String   @unique
  meals    Meals[]
  company  Company  @relation(fields: [companyId], references: [id])
  companyId String

  @@map("users")
}

model Meals {
  id        String   @id @default(uuid())
  breakfast String
  lunch     String
  dinner    String
  day       String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String

  @@map("meals")
}